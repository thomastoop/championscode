local ReplicatedStorage = game:GetService("ReplicatedStorage")
local player = game.Players.LocalPlayer

local sniperFireRemote = ReplicatedStorage:WaitForChild("WeaponActions"):WaitForChild("SniperFireSound")
local sniperReloadRemote = ReplicatedStorage:WaitForChild("WeaponActions"):WaitForChild("SniperReloadSound")

local pistolShootRemote = ReplicatedStorage:WaitForChild("WeaponActions"):WaitForChild("PistolFireSound")
local pistolReloadRemote = ReplicatedStorage:WaitForChild("WeaponActions"):WaitForChild("PistolReloadSound")

local revolverSoundRemote = ReplicatedStorage:WaitForChild("WeaponActions"):WaitForChild("RevolverFireSound")
local revolverReloadRemote = ReplicatedStorage:WaitForChild("WeaponActions"):WaitForChild("RevolverReloadSound")

local autoPistolShootRemote = ReplicatedStorage:WaitForChild("WeaponActions"):WaitForChild("AutoPistolFireSound")
local autoPistolReloadRemote = ReplicatedStorage:WaitForChild("WeaponActions"):WaitForChild("AutoPistolReloadSound")

local meleeLeftHitSoundRemote = ReplicatedStorage:WaitForChild("WeaponActions"):WaitForChild("MeleeLeftHitSound")
local meleeRightHitSoundRemote = ReplicatedStorage:WaitForChild("WeaponActions"):WaitForChild("MeleeRightHitSound")

local rifleShootRemote = ReplicatedStorage:WaitForChild("WeaponActions"):WaitForChild("RifleFireSound")
local rifleReloadRemote = ReplicatedStorage:WaitForChild("WeaponActions"):WaitForChild("RifleReloadSound")

local SMGShootRemote = ReplicatedStorage:WaitForChild("WeaponActions"):WaitForChild("SMGFireSound")
local SMGReloadRemote = ReplicatedStorage:WaitForChild("WeaponActions"):WaitForChild("SMGReloadSound")

local ShotgunShootSound = ReplicatedStorage:WaitForChild("WeaponActions"):WaitForChild("ShotgunFireSound")
local ShotgunShellIn = ReplicatedStorage:WaitForChild("WeaponActions"):WaitForChild("ShotgunReloadSound")

local LightningBombZap = ReplicatedStorage:WaitForChild("AbilityActions"):WaitForChild("LightningBombZap")
local activateSyringeSoundRemote = ReplicatedStorage:WaitForChild("AbilityActions"):WaitForChild("SyringeSound")
local activateRegenSoundRemote = ReplicatedStorage:WaitForChild("AbilityActions"):WaitForChild("RegenPotSound")

local GrenadeThrowSound = ReplicatedStorage:WaitForChild("AbilityActions"):WaitForChild("GrenadeSound")

local hit = ReplicatedStorage:WaitForChild("Hit")
local hs = ReplicatedStorage:WaitForChild("Headshot")
local skinDmgIndicator = ReplicatedStorage:WaitForChild("SkinDamageIndicator")

local SlideSound = ReplicatedStorage:WaitForChild("SlideSound")


hit.OnClientEvent:Connect(function(plr, h, hp)
	ReplicatedStorage.hitsound:Play()
end)

hs.OnClientEvent:Connect(function(plr, h, hp)
	ReplicatedStorage.headshotSound:Play()
end)

skinDmgIndicator.OnClientEvent:Connect(function(plr, h, hp)
	ReplicatedStorage.headshotSound:Play()
end)

sniperFireRemote.OnClientEvent:Connect(function(position, otherPlayer)
	if player == otherPlayer or (player.GameTeam.playerTeam.Value ~= otherPlayer.GameTeam.playerTeam.Value and otherPlayer.GeneralInfo.PreRound.Value) then return end

	local soundPart = Instance.new("Part")
	soundPart.Name = "Sound"
	soundPart.Position = position
	soundPart.Anchored = true
	soundPart.CanCollide = false
	soundPart.CanQuery = false
	soundPart.CanTouch = false
	soundPart.Transparency = 1
	soundPart.Parent = otherPlayer.Character.HumanoidRootPart

	local sound = Instance.new("Sound")
	sound.SoundId = "rbxassetid://111953738962953"
	sound.Volume = 1.3
	sound.RollOffMaxDistance = 500
	sound.Parent = soundPart
	sound:Play()

	sound.Ended:Connect(function()
		sound:Destroy()
		soundPart:Destroy()
	end)
end)

