local activateSyringeSoundRemote = ReplicatedStorage:WaitForChild("AbilityActions"):WaitForChild("SyringeSound")
local activateRegenSoundRemote = ReplicatedStorage:WaitForChild("AbilityActions"):WaitForChild("RegenPotSound")

local GrenadeThrowSound = ReplicatedStorage:WaitForChild("AbilityActions"):WaitForChild("GrenadeSound")

local SlideSound = ReplicatedStorage:WaitForChild("SlideSound")

local function playSoundAtPosition(soundId, position, excludePlayer)
	local soundPart = Instance.new("Part")
	soundPart.Position = position
	soundPart.Anchored = true
	soundPart.CanCollide = false
	soundPart.Transparency = 1
	soundPart.Parent = workspace

	local sound = Instance.new("Sound")
	sound.SoundId = soundId
	sound.Volume = 2
	sound.Parent = soundPart
	sound:Play()

	sound.Ended:Connect(function()
		sound:Destroy()
		soundPart:Destroy()
	end)
end

sniperFireRemote.OnServerEvent:Connect(function(player, position)
	sniperFireRemote:FireAllClients(position, player)  -- Play sound for other players
end)

